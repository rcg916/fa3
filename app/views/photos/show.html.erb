<% unless current_user %>
  <p class="alert alert-info">To start UpVoting pictures and writing your own reviews, <%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'Sign up', new_user_registration_path %>!</p>
<% end %>

<div class="col-10 offset-1 main">

	<%= link_to 'Back', :back %><br /><br />

	<% if current_user && @review.user != current_user %>
		<%= link_to photoupvote_text, photoupvotes_update_path(photo: @review.photos.last), id: 'photoupvote_link', remote: true %>
		<br /><br />
	<% end %>

	<%= image_tag((@review.photos.last.picture.url), class: 'review_image') %><br /><br />

	<% if current_user && @review.user == current_user %>
		<%= link_to 'Delete Photo', store_review_photo_path(@review.store, @review.photos.last, @review), method: :delete, data: {confirm: 'Are you sure you want to delete this photo? You cannot reverse this action.'}, class: 'btn btn-danger' %><br />
	<% end %>

	<br /><br />

</div>