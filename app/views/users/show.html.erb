<div class="col-10 offset-1 main">

	<h1>User Dashboard</h1>
	<br />

	<%= link_to "Follow", '#' %>

	<br /><br />

	<%= @user.email %><br />
	<%= @user.reviews.count %><br /><br />

	<h3>Favorite stores:</h3>
	<% @user.favoritestores.each do |favoritestore| %>
		<%= favoritestore.store.storename %><br />
		<%= favoritestore.store.reviews.count %>
	<% end %>

	<br /><br />

	<%= @user.photoupvotes.count %>

	<br /><br />

	<!-- Show if current user is the user from this profile -->
	<% if current_user && current_user == @user %>
		<div class="box">
			<div>
				<% if @user.userlocations.last.present? %>
					<h5>Current User Location: <%= @user.userlocations.last.address %></h5>
				<% end %>
			</div>
			<div>
				<h4>Update your location:</h4>
				<%= simple_form_for @userlocation, url: user_userlocations_path(current_user) do |f| %>
				  <%= f.input :address, label: 'Address:' %>
				  <br />
				  <%= f.submit 'Update', class: 'btn btn-primary' %>
				<% end %>
			</div>
		</div>
	<% end %>
	<!-- -->

</div>